{
	"opts": {
		"buildPath": "./build",
		"htmlPath": "./html",
		"jsFileName": "latte_view"
	},
	"main": {
		"commands": {
			"build": "buildFile",
			"mini": ["build", "miniFile"],
			"copy": ["mini", "copyFile"]
		}
	},
	"clean": {
		"commands": {
			"remove": {
				"paths": ["${buildPath}", "${htmlPath}/js/${jsFileName}.js"]
			}
		}

	},
	"buildFile": {
		"commands": {
			"js": {
				"type": "js",
				"inPath": ["./lib"],
				"outPath": "${buildPath}/${version}/${jsFileName}.js"
			}
		}
	},
	"miniFile": {	
		"commands": {
			"mini": {
				"type": "js",
				"inPath": "${buildPath}/${version}/${jsFileName}.js",
				"outPath": "${buildPath}/${version}/${jsFileName}_min.js"
			}
		}
	},
	"copyFile": {
		"commands": {
			"link": {
				"inPath": "${buildPath}/${version}/${jsFileName}.js",
				"outPath": "${htmlPath}/js/${jsFileName}.js"
			}
		}
	}
}